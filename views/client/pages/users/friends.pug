extends ../../layouts/default.pug 
include ../../mixins/box-head.pug



block main
    .container.my-3 

        include ../../partials/list-btn-users 

        .row 
            .col-12 
                +box-head(pageTitle)

        .row(data-users-friend=user.id)
            each user in users
                .col-6(user-id=user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img( src=(user.avatar ? user.avatar : "/images/avatar-defaulse.png")
                                alt=user.fullName
                                )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                a(
                                    href=`/chat/${user.infoFriend.room_chat_ids}`
                                    class="btn btn-sm btn-primary mr-1" 
                                ) Nhan tin
                        div(
                            class="inner-status"
                            status=user.statusOnline
                        ) <i class="fa-solid fa-circle"></i>
block script 
    script(src="/js/users.js")
